<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResetPasswordActivity">

    <RelativeLayout
        android:id="@+id/rl123"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/pink"
        android:layout_alignParentTop="true">
    <TextView
        android:id="@+id/page_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reset Password"
        android:gravity="center"
        android:textSize="26dp"
        android:layout_marginTop="15dp"
        />
    </RelativeLayout>

    <EditText
        android:id="@+id/find_ph_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_ques"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:inputType="number"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/input_design"
        android:hint="Phone number"
        android:padding="14dp" />

    <TextView
        android:id="@+id/title_ques"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Answer the questions:"
        android:gravity="center"
        android:textSize="26dp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/rl123"
        />

    <EditText
        android:id="@+id/ques_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_design"
        android:padding="14dp"
        android:layout_below="@+id/find_ph_no"
        android:layout_margin="15dp"
        android:hint="What was your childhood name?"/>

    <EditText
        android:id="@+id/ques_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_design"
        android:padding="14dp"
        android:layout_below="@+id/ques_1"
        android:layout_margin="15dp"
        android:hint="Where did you do your schooling from?"/>

    <Button
        android:id="@+id/verify_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14dp"
        android:layout_below="@+id/ques_2"
        android:layout_marginTop="35dp"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_margin="15dp"
        android:text="Verify"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/admin_fab"
        android:layout_width="78dp"
        android:layout_height="80dp"
        android:layout_below="@+id/verify_btn"
        android:layout_alignParentRight="true"
        android:layout_gravity="bottom|end"
        android:layout_marginTop="202dp"
        android:layout_marginEnd="@dimen/fab_margin"
        android:layout_marginRight="23dp"
        android:layout_marginBottom="16dp"
        app:srcCompat="@android:drawable/sym_action_chat" />


</RelativeLayout>