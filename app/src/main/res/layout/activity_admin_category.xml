<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightpurp"
    tools:context=".Admin.AdminCategoryActivity">

    <TextView
        android:id="@+id/slogan_category"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:text="Add New Product"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linear1_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:gravity="center|center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/slogan_category">

        <ImageView
            android:id="@+id/t_shirts"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            app:srcCompat="@drawable/tshirts"
            tools:layout_editor_absoluteX="95dp"
            tools:layout_editor_absoluteY="206dp" />

        <ImageView
            android:id="@+id/sports"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/sports"
            tools:layout_editor_absoluteX="95dp"
            tools:layout_editor_absoluteY="206dp" />

        <ImageView
            android:id="@+id/female_dresses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/female_dresses"
            tools:layout_editor_absoluteX="95dp"
            tools:layout_editor_absoluteY="206dp" />

        <ImageView
            android:id="@+id/sweater"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/sweather"
            tools:layout_editor_absoluteX="95dp"
            tools:layout_editor_absoluteY="206dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:gravity="center|center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear1_category_layout">

        <ImageView
            android:id="@+id/glasses"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/glasses"
            tools:layout_editor_absoluteX="95dp"
            tools:layout_editor_absoluteY="206dp" />

        <ImageView
            android:id="@+id/purses_bags_wallets"
            android:layout_width="90dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/purses_bags"
            tools:layout_editor_absoluteX="95dp"
            tools:layout_editor_absoluteY="206dp" />

        <ImageView
            android:id="@+id/hats_caps"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/hats"
            tools:layout_editor_absoluteX="95dp"
            tools:layout_editor_absoluteY="206dp" />

        <ImageView
            android:id="@+id/shoes"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_marginStart="16dp"
            app:srcCompat="@drawable/shoess"
            tools:layout_editor_absoluteX="95dp"
            tools:layout_editor_absoluteY="206dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear3_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:gravity="center|center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear2_category_layout">

        <ImageView
            android:id="@+id/headphones_handfree"
            android:layout_width="90dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/headphoness"
            tools:layout_editor_absoluteX="95dp"
            tools:layout_editor_absoluteY="206dp" />

        <ImageView
            android:id="@+id/laptops"
            android:layout_width="90dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/laptops"
            tools:layout_editor_absoluteX="95dp"
            tools:layout_editor_absoluteY="206dp" />

        <ImageView
            android:id="@+id/watches"
            android:layout_width="90dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/watches"
            tools:layout_editor_absoluteX="95dp"
            tools:layout_editor_absoluteY="206dp" />

        <ImageView
            android:id="@+id/mobiles"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_marginStart="16dp"
            app:srcCompat="@drawable/mobiles"
            tools:layout_editor_absoluteX="95dp"
            tools:layout_editor_absoluteY="206dp" />

    </LinearLayout>

    <Button
        android:id="@+id/check_order_btn"
        android:layout_width="160dp"
        android:layout_height="69dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="76dp"
        android:background="@color/pink"
        android:gravity="center"
        android:text="Check Orders"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/admin_logout_btn"
        android:layout_width="360dp"
        android:layout_height="46dp"
        android:layout_marginBottom="16dp"
        android:background="@color/pink"
        android:text="Logout"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/admin_edit_prod_btn"
        android:layout_width="160dp"
        android:layout_height="69dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="76dp"
        android:background="@color/pink"
        android:text="Edit Products"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>