<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Admin.AdminMaintainProductsActivity"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/product_image_admin"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            />

        <EditText
            android:id="@+id/product_name_admin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_image_admin"
            android:background="@drawable/input_design"
            android:hint="Product Name"
            android:textAlignment="center"
            android:padding="12dp"
            android:layout_margin="5dp"
            android:textSize="18sp"
            android:textColor="@color/white"
            />

        <EditText
            android:id="@+id/product_description_admin"
            android:layout_width="match_parent"
            android:background="@drawable/input_design"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_price_admin"
            android:hint="Product Description"
            android:textAlignment="center"
            android:textSize="16sp"
            android:padding="12dp"
            android:layout_margin="5dp"
            android:textColor="@color/white"
            />
        <EditText
            android:id="@+id/product_price_admin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_name_admin"
            android:background="@drawable/input_design"
            android:hint="Product Price"
            android:textAlignment="center"
            android:padding="12dp"
            android:layout_margin="5dp"
            android:textSize="18sp"
            android:textColor="@color/white"
            />

        <Button
            android:id="@+id/apply_changes_maintain_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_description_admin"
            android:text="Apply Changes"
            android:textAlignment="center"
            android:padding="12dp"
            android:layout_margin="5dp"
            android:textSize="18sp"
            android:textColor="@color/white"
            />
        <Button
            android:id="@+id/delete_prod_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/apply_changes_maintain_btn"
            android:text="Delete Product"
            android:textAlignment="center"
            android:padding="12dp"
            android:layout_margin="5dp"
            android:textSize="18sp"
            android:textColor="@color/white"
            />


    </RelativeLayout>

</androidx.cardview.widget.CardView>